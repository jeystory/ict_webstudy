	//$("p").hide();
	
	// id 선택자
	// $("#p1").hide();
	
	//클래스 선택자 .
	 //$(".p2").hide();
	
	//모두 선택
	// $("*").hide();
	
	//this 선택자 : 현재 실행중인 요소(반복문이나 객체에서 많이 사용)
	// $("button").click(function() {
	//		$(this).hide();
	//	}); 
	
	// Element:first => 해당 요소 중 첫번째 요소
	// Element:last => 해당 요소 중 마지막 번째 요소
	 //$("p:first").hide();
	// $("p:last").hide();	
	
	$("ul li:first").hide();
		
});
</script>
