<!-- 3. JQuery 
	   $("selector").action()
	    selector : 
	      1. this         => 현재 진행 실행 중 인 요소
	      2. element      => 태그
	      3. #            => 아이디
	      4. .(점)         => 클래스 
	      5. :first       => 첫번째 요소
	      6. :first-child => 첫번째 자식요소
	      7. :[속성]  
	  -->
<script type="text/javascript">
/* 
$(document).ready(function(){
	  $("button").click(function() {
		// hide() --> 이벤트
		// 요소 선택자
		// p 요소들을 숨긴다.
		$("p").hide();
	});    
});
 */
//실행순서 : 1번 => head의 JavaScript
//              2번 => body에 있는 본문
//				 3번 => head에 있는 jQuery
 $(function() {
	// 기존 정보를 모두 삭제하고 출력된다.
